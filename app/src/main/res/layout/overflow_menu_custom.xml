<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/overflow_menu_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/OverflowMenuItem"
            android:id="@+id/overflow_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overflow_refresh" />

        <TextView
            style="@style/OverflowMenuItem"
            android:id="@+id/overflow_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overflow_sort" />
    </LinearLayout>
</android.support.v7.widget.CardView>